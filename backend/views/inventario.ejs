<!DOCTYPE html>
<html>
    <head>
        <link href="https://fonts.googleapis.com/css2?family=Train+One&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <link href="styles/inventario.css" rel="stylesheet" type="text/css" />
        <link href="styles/bootstrap.css" rel="stylesheet" type="text/css" />
        <script src="js/bootstrap.bundle.js"></script>
    </head>

    <body class="container">
        <h1>Inventarios</h1>
        <div id="tablita">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Index</th>
                        <th>Cod. Art.</th>
                        <th>Nombre Art.</th>
                        <th>Desc. Art.</th>
                        <th>Cant. Art.</th>
                    </tr>
                </thead>
                <tbody id="data_inventarios">
                    <% inventarios.forEach((inv) => { %>
                        <tr>
                            <td><%= inv.id %></td>
                            <td><%= inv.codigo %></td>
                            <td><%= inv.nombre %></td>
                            <td><%= inv.descripcion %></td>
                            <td><%= inv.cantidad %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <a href="/add" id="but_agregar" class="btn btn-success mb-5" type="button">Agregar</a>
        <a href="/edit" id="but_modificar" class="btn btn-success mb-5" type="button">Modificar</a>
        <a href="/delete" id="but_eliminar" class="btn btn-success mb-5" type="button">Eliminar</a>
    </body>
</html>